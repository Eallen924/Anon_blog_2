<div class="container">


<form action="/post/create" method="post">
  <label for="post_title">Title:</label>
  <input id="post_title" name="post[title]" placeholder="Title" value="<%= @post.title if @post%>"><br>
  <br>

  <label for="post_author">Author:</label>
  <input id="post_author" name= "post[author]" value="<%= @post.author if @post %>"><br>
  <br>

  <label for="post_body">Body:</label>
  <textarea id="post_body" rows=5 col= 10 name= "post[body]" placeholder="Enter text here...">
    <%= @post.body if @post%></textarea><br>

  <label for="post_tags">Author:</label>
  <input id="post_tags" name= "tag[]" value="<%= @post.author if @post %>"><br>
  <br>

  <input type="submit" value="Submit"><br>
</form>

  <% @post.tags.each do |tag| %>
  <form action="/remove_tag" method="post">
    <input type="hidden" name="post_id" value="<%= @post.id %>">
    <input type="hidden" name="tag_id" value="<%= tag.id %>">
    <input type="submit" value="<%= tag.name %> X">
  </form>
  <% end %>
