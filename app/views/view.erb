<div class="container">
  <div class="post_wrapper">
   <h1><%= @post.title %></h1>
  <h2>By: <%= @post.author %></h2>
  <h3>Written on: <%= @post.created_at.strftime("%A %B %d, %Y") %></h3>
  <p><%= @post.body %></p>
  <ul>
    <% @post.tags.each do |tag| %>
    <li><%= tag.name.strip %></li>
  <% end %>
  </ul>
</div>
  <a href="/post/edit/<%= @post.id %>">Edit</a>
</div>